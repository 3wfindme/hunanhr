    <script src="{{ asset('js/html5shiv.js') }}"></script>
    <script src="{{ asset('js/respond.js') }}"></script><![endif]-->
</head>
<body>

<div id="header">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('home') }}">湖南英才网</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('home') }}">首页</a></li>
                    <li><a href="{{ path('job_new') }}">发布职位</a></li>
                </ul>

                <ul class="nav navbar-nav pull-right">
                    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{ app.user.screenName }}<b
                                        class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a href="{{ path('profile_edit') }}">资料设置</a></li>
                                <li><a href="{{ path('change_password') }}">修改密码</a></li>
                                <li class="divider"></li>
                                <li><a href="{{ path('delivery_sent') }}">发出的简历</a></li>
                                <li><a href="{{ path('delivery_received') }}">收到的简历</a></li>
                                <li class="divider"></li>
                                <li><a href="{{ path('logout') }}">退出</a></li>
                            </ul>
                        </li>
                    {% else %}
                        <li><a href="{{ path('register') }}">注册</a></li>
                        <li><a href="{{ path('login') }}">登录</a></li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>
</div>

{% block body %}
    <div id="container-wrapper">
        <div class="container">
            <div class="wrapper">

                {% block content_top %}
                {% endblock %}

                <div id="content">
                    {% block content %}
                    {% endblock %}
                </div>
                <div id="sidebar">
                    {% block sidebar %}
                        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                            <div class="module">
                                <div class="flex-module profile-summary">
                                    <div class="module-header">
                                        <div class="card">
                                            <div class="avatar-wrapper">
                                                <div class="upload-face">
                                                    <a href="{{ path('profile_show', {'username': app.user.username}) }}"><img src="{{ asset(app.user.avatarBigUrl) }}" class="avatar"/></a>
                                                    <a class="upload-action" href="{{ path('upload_face') }}">修改头像</a>
                                                </div>
                                            </div>

                                            <strong class="fullname"><a
                                                        href="{{ path('profile_show', {'username': app.user.username}) }}">{{ app.user.screenName }}</a></strong>

                                            <p class="metadata">{{ app.user.bio|substring(20) }}</p>
                                        </div>
                                    </div>
                                    <div class="action clearfix">
                                        {#<a href="">0 条未读提醒</a>#}
                                        <a href="{{ path('profile_edit') }}" class="btn btn-default pull-right">资料设置</a>
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <div class="module">
                                <div class="flex-module about">
                                    <div class="module-header">
                                        <h2>欢迎访问湖南英才网</h2>
                                    </div>
                                    <p class="slogan">湖南英才网（Beta）是一个靠谱的招聘社区，专注湖南地区的网络招聘。</p>

                                    <div class="text-center">
                                        <div class="btn-group">
                                            <a href="{{ path('register') }}" class="btn btn-default">立即注册</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endif %}

                        {% block sidebar_crad_bottom %}
                        {% endblock %}

                        <div class="module">
                            <div class="flex-module advert">
                                <a href="http://www.amazon.cn/s?rh=n%3A853798051&tag=babyfamily-23&camp=440&creative=3308&linkCode=ur1&adid=01R5ZP5EQ54B10YCYQZZ&ref-refURL=http%3A%2F%2Fwww.babyfamily.com%2F" target="_blank"><img src="http://g-ecx.images-amazon.com/images/G/28/Baby/moli/zcn/wj.png"/></a>
