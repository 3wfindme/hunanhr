                    {% endblock %}
                </div>
            </div>
        </div>
    </div>
{% endblock body %}

<div id="footer" class="container">
    <p>
        <span class="copyright">2013 &copy; 湖南英才网</span>
        <span class="footer-link">
            <a href="{{ path('page_about') }}">关于我们</a>
            <span class="divider">·</span>
            <a href="{{ path('page_contact') }}">取得联系</a>
            <span class="divider">·</span>
