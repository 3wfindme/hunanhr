{% extends 'HRUserBundle::layout.html.twig' %}

{% block user_content %}
    {{ form_start(form, {'action': path('career_edit', {'careerId': career.id}), 'attr': {'class': 'form-horizontal' }}) }}

    {{ form_row(form.companyName) }}
    {{ form_row(form.title) }}

    <div class="form-group">
        <div class="col-md-2 control-label">
            <span class="required">*</span> <label>起止时间</label>
        </div>
        <div class="col-md-10 embed">
            {{ form_widget(form.startDate) }} 至 {{ form_widget(form.endDate) }}
            <div class="has-error">
                {{ form_errors(form.startDate) }}
                {{ form_errors(form.endDate) }}
            </div>
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}