{% extends 'HRUserBundle::layout.html.twig' %}

{% block user_content %}
    {{ form_start(form, {'action': path('delivery_new', {'jobId': job.id}), 'attr': {'class': 'form-horizontal' }}) }}

    <div class="form-group">
        <div class="col-lg-2 control-label">
            <label>收件人</label>
        </div>
        <div class="col-lg-10 form-control-static text-muted">
            {{ job.contactEmail|obfuscate_email }}
        </div>
    </div>

    {{ form_end(form) }}

{% endblock %}

{% block ext_content %}

    <div class="module">
        <div class="flex-module">
            <div class="module-header contain-btn clearfix">
                <div class="pull-right text-muted">
                    (完善后继续发送简历)
                    <a href="{{ path('profile_edit', {'from' : path('delivery_new', {'jobId': job.id}) }) }}" class="btn btn-success">完善简历</a>
                </div>
                <h2>简历预览</h2>
            </div>

            <div class="resume">
                <div class="body">
                    <div class="profile">

                        <h5>基本资料</h5>

                        <table>
                            <tr>
                                <th>头像</th>
                                <td><img src="{{ asset(user.avatarBigUrl) }}"/></td>
                            </tr>
                            <tr>
                                <th>真实姓名</th>
                                <td>{{ user.realName|default('*未填写*') }}</td>
                            </tr>
                            <tr>
                                <th>性别</th>
                                <td>{{ user.genderName }}</td>
                            </tr>
                            <tr>
                                <th>生日</th>
                                <td>{{ user.birthday|date('Y-m-d') }}</td>
                            </tr>
                            <tr>
                                <th>最高学历</th>
                                <td>{{ user.degreeName|default('*未填写*') }}</td>
                            </tr>
                            <tr>
                                <th>当前职位</th>
                                <td>{{ user.jobTitle|default('*未填写*') }}</td>
                            </tr>
                            <tr>
                                <th>所在公司或机构</th>
                                <td>{{ user.companyName|default('*未填写*') }}</td>
                            </tr>
                            {% if user.homepage %}
                                <tr>
                                    <th>个人主页</th>
                                    <td><a href="{{ user.homepage }}" target="_blank">{{ user.homepage }}</a></td>
                                </tr>
                            {% endif %}
                            <tr>
                                <th>简介</th>
                                <td>{{ user.bio|default('*未填写*') }}</td>
                            </tr>
                        </table>

                        <h5>联系方式</h5>

                        <table>
                            <tr>
                                <th>手机号码</th>
                                <td>{{ user.phoneNumber|default('*未填写*') }}</td>
                            </tr>
                            <tr>
                                <th>个人邮箱</th>
                                <td>{{ user.email }}</td>
                            </tr>
                        </table>

                        <h5>职业经历</h5>

                        {% for position in user.positions %}
                            <table>
                                <tr>
                                    <th>公司或机构</th>
                                    <td>{{ position.companyName }}</td>
                                </tr>
                                <tr>
                                    <th>职位或头衔</th>
                                    <td>{{ position.title }}</td>
                                </tr>
                                <tr>
                                    <th>起止时间</th>
                                    <td>{{ position.startDate }} ~ {{ position.endDate }}</td>
                                </tr>
                                {% if position.summary %}
                                    <tr>
                                        <th>简介</th>
                                        <td>{{ position.summary }}</td>
                                    </tr>
                                {% endif %}
                            </table>
                            {% if not loop.last %}
                                <hr/>
                            {% endif %}
                        {% else %}
                            <p class="text-muted">*未添加*</p>
                        {% endfor %}

                        <h5>教育经历</h5>

                        {% for education in user.educations %}
                            <table>
                                <tr>
                                    <th>学校名称</th>
                                    <td>{{ education.schoolName }}</td>
                                </tr>
                                <tr>
                                    <th>取得学历</th>
                                    <td>{{ education.degreeName }}</td>
                                </tr>
                                <tr>
                                    <th>起止时间</th>
                                    <td>{{ education.startDate }} ~ {{ education.endDate }}</td>
                                </tr>
                                {% if education.summary %}
                                    <tr>
                                        <th>简介</th>
                                        <td>{{ education.summary }}</td>
                                    </tr>
                                {% endif %}
                            </table>
                            {% if not loop.last %}
                                <hr/>
                            {% endif %}
                        {% else %}
                            <p class="text-muted">*未添加*</p>
                        {% endfor %}

                        <h5>技能</h5>

                        {% for skill in user.skills %}
                            <table>
                                <tr>
                                    <th>名称</th>
                                    <td>{{ skill.name }}</td>
                                </tr>
                                {% if skill.summary %}
                                    <tr>
                                        <th>描述</th>
                                        <td>{{ skill.summary }}</td>
                                    </tr>
                                {% endif %}
                            </table>
                            {% if not loop.last %}
                                <hr/>
                            {% endif %}
                        {% else %}
                            <p class="text-muted">*未添加*</p>
                        {% endfor %}

                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}