<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="twig.extension.markup" class="HR\PositionBundle\Twig\Extension\MarkupExtension">
            <tag name="twig.extension" />
        </service>

        <service id="twig.extension.string" class="HR\PositionBundle\Twig\Extension\StringExtension">
            <tag name="twig.extension" />
        </service>

        <service id="twig.extension.pager" class="HR\PositionBundle\Twig\Extension\PagerExtension">
            <argument type="service" id="service_container" />
            <tag name="twig.extension" />
        </service>
    </services>

</container>