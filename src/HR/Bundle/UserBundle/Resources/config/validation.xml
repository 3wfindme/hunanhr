<?xml version="1.0" encoding="UTF-8"?>

<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
        http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="HR\Bundle\UserBundle\Entity\User">
        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">email</option>
            <option name="message">该电子邮件地址已存在</option>
            <option name="groups">
                <value>Registration</value>
                <value>Profile</value>
            </option>
        </constraint>
        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">username</option>
            <option name="message">该用户名不可用</option>
            <option name="groups">
                <value>Registration</value>
                <value>Profile</value>
            </option>
        </constraint>

        <property name="email">
            <constraint name="NotBlank">
                <option name="message">电子邮件地址不能为空</option>
                <option name="groups">
                    <value>Registration</value>
                    <value>Profile</value>
                </option>
            </constraint>
            <constraint name="Email">
                <option name="message">"{{ value }}" 不是一个有效的电子邮件地址</option>
                <option name="groups">
                    <value>Registration</value>
                    <value>Profile</value>
                </option>
            </constraint>
        </property>
        <property name="username">
            <constraint name="NotBlank">
                <option name="message">用户名不能为空</option>
                <option name="groups">
                    <value>Registration</value>
                    <value>Profile</value>
                </option>
            </constraint>
            <constraint name="Length">
                <option name="min">3</option>
                <option name="minMessage">用户名长度至少需要{{ limit }}个字符</option>
                <option name="max">20</option>
                <option name="maxMessage">用户名长度不能超过{{ limit }}个字符</option>
                <option name="groups">
                    <value>Registration</value>
                    <value>Profile</value>
                </option>
            </constraint>
            <constraint name="Regex">
                <option name="pattern">/^[^-_]+[a-z0-9-_]+[^-_]$/</option>
                <option name="message">用户名只能包含字母、数字、_或减号，不能以_或减号开头或结尾。</option>
                <option name="groups">
                    <value>Registration</value>
                    <value>Profile</value>
                </option>
            </constraint>
        </property>
        <property name="plainPassword">
            <constraint name="NotBlank">
                <option name="message">密码不能为空</option>
                <option name="groups">
                    <value>Registration</value>
                    <value>ChangePassword</value>
                    <value>Resetting</value>
                </option>
            </constraint>
            <constraint name="Length">
                <option name="min">5</option>
                <option name="minMessage">密码长度至少需要 {{ limit }} 位</option>
                <option name="groups">
                    <value>Registration</value>
                    <value>ChangePassword</value>
                    <value>Resetting</value>
                </option>
            </constraint>
        </property>
        <property name="screenName">
            <constraint name="NotBlank">
                <option name="message">昵称不能为空</option>
                <option name="groups">
                    <value>Registration</value>
                    <value>Profile</value>
                </option>
            </constraint>
            <constraint name="Length">
                <option name="min">2</option>
                <option name="minMessage">昵称长度至少需要{{ limit }}个字符</option>
                <option name="max">20</option>
                <option name="maxMessage">昵称长度不能超过{{ limit }}个字符</option>
                <option name="groups">
                    <value>Registration</value>
                    <value>Profile</value>
                </option>
            </constraint>
        </property>
        <property name="realName">
            <constraint name="Length">
                <option name="min">2</option>
                <option name="minMessage">姓名长度至少需要{{ limit }}个字符</option>
                <option name="max">20</option>
                <option name="maxMessage">姓名长度不能超过{{ limit }}个字符</option>
                <option name="groups">
                    <value>Profile</value>
                </option>
            </constraint>
        </property>
        <property name="gender">
            <constraint name="Choice">
                <option name="choices">
                    <value>male</value>
                    <value>female</value>
                </option>
                <option name="message">请选择有效的选项</option>
                <option name="groups">
                    <value>Profile</value>
                </option>
            </constraint>
        </property>
        <property name="birthday">
            <constraint name="Date">
                <option name="message">请填写有效的生日</option>
                <option name="groups">
                    <value>Profile</value>
                </option>
            </constraint>
        </property>
        <property name="degree">
            <constraint name="Range">
                <option name="min">1</option>
                <option name="max">5</option>
                <option name="minMessage">请选择正确的学历</option>
                <option name="maxMessage">请选择正确的学历</option>
                <option name="groups">
                    <value>Profile</value>
                </option>
            </constraint>
        </property>
        <property name="jobTitle">
            <constraint name="Length">
                <option name="max">100</option>
                <option name="maxMessage">职位或头衔长度不能超过{{ limit }}个字符</option>
                <option name="groups">
                    <value>Profile</value>
                </option>
            </constraint>
        </property>
        <property name="companyName">
            <constraint name="Length">
                <option name="max">200</option>
                <option name="maxMessage">公司或机构名称长度不能超过{{ limit }}个字符</option>
                <option name="groups">
                    <value>Profile</value>
                </option>
            </constraint>
        </property>
        <property name="phoneNumber">
            <constraint name="Regex">
                <option name="pattern">/^1\d{10}$/</option>
                <option name="message">手机号码格式不正确</option>
                <option name="groups">
                    <value>Profile</value>
                </option>
            </constraint>
        </property>
        <property name="homepage">
            <constraint name="Url">
                <option name="message">个人主页地址格式不正确</option>
                <option name="groups">
                    <value>Profile</value>
                </option>
            </constraint>
        </property>
        <property name="bio">
            <constraint name="Length">
                <option name="max">500</option>
                <option name="maxMessage">个人介绍长度不能超过{{ limit }}个字符</option>
                <option name="groups">
                    <value>Profile</value>
                </option>
            </constraint>
        </property>
    </class>

    <class name="HR\Bundle\UserBundle\FormModel\Photo">
        <property name="file">
            <constraint name="NotBlank">
                <option name="message">请选择一个文件</option>
            </constraint>
            <constraint name="File">
                <option name="maxSize">2000000</option>
                <option name="mimeTypes">
                    <value>image/png</value>
                    <value>image/jpg</value>
                    <value>image/jpeg</value>
                    <value>image/gif</value>
                </option>
                <option name="maxSizeMessage">文件不能超过 2MB</option>
                <option name="mimeTypesMessage">请选择一个图像文件</option>
            </constraint>
        </property>
    </class>
</constraint-mapping>