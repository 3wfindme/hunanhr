<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="register" pattern="/register">
        <default key="_controller">HRUserBundle:Registration:register</default>
    </route>

    <route id="login" pattern="/login">
        <default key="_controller">HRUserBundle:Security:login</default>
    </route>

    <route id="login_check" pattern="/login_check">
        <default key="_controller">HRUserBundle:Security:loginCheck</default>
    </route>

    <route id="logout" pattern="/logout">
        <default key="_controller">HRUserBundle:Security:logout</default>
    </route>

    <route id="profile_edit" pattern="/setting/profile">
        <default key="_controller">HRUserBundle:Profile:edit</default>
    </route>

    <route id="resume_edit" pattern="/setting/resume">
        <default key="_controller">HRUserBundle:Resume:edit</default>
    </route>
</routes>