<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="user.firewall_name">main</parameter>
    </parameters>

    <services>
        <service id="user.listener.authentication" class="HR\Bundle\UserBundle\EventListener\AuthenticationListener">
            <tag name="kernel.event_subscriber" />
            <argument type="service" id="user.security.login_manager" />
            <argument>%user.firewall_name%</argument>
        </service>
    </services>
</container>