{% extends 'form_div_layout.html.twig' %}

{% block form_label %}
    {% set label_attr = label_attr|default({'class': 'col-sm-2 control-label'}) %}
    {{ parent() }}
{% endblock form_label %}

{% block widget_attributes %}
    {% set attr = attr|default({'class': 'form-control', 'size': 35}) %}
    {{ parent() }}
{% endblock widget_attributes %}

{% block form_row %}
    {% spaceless %}
        <div class="form-group{% if errors|length > 0 %} has-error{% endif %}">
            {{ form_label(form) }}
            <div class="col-sm-10">
                {{ form_widget(form) }}
                {{ form_errors(form) }}
            </div>
        </div>
    {% endspaceless %}
{% endblock form_row %}

{% block form_start %}
    {% set attr = attr|default({'class': 'form-horizontal'}) %}
    {{ parent() }}
{% endblock form_start %}

{% block button_attributes %}
    {% set attr = attr|default({'class': 'btn btn-primary'}) %}
    {{ parent() }}
{% endblock button_attributes %}

{% block button_widget %}
    {% spaceless %}
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                {{ parent() }}
            </div>
        </div>
    {% endspaceless %}
{% endblock button_widget %}

{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            <div class="help-block">
                <ul>
                    {% for error in errors %}
                        <li>{{ error.message }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}