<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="HR\Bundle\SkillBundle\Entity\Skill" table="skill">

        <indexes>
            <index columns="created_at" />
        </indexes>

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>
        <field name="name" type="string" column="name" length="100" />
        <field name="summary" type="text" column="summary" nullable="true" />
        <field name="createdAt" type="datetime" column="created_at" />

        <many-to-one target-entity="HR\Bundle\UserBundle\Entity\User" field="user" inversed-by="skills" />
    </entity>
</doctrine-mapping>