<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="education.entity.class">HR\Bundle\EducationBundle\Entity\Education</parameter>
        <parameter key="education.manager.class">HR\Bundle\EducationBundle\EntityManager\EducationManager</parameter>
    </parameters>

    <services>
        <service id="education.manager" class="%education.manager.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%education.entity.class%</argument>
        </service>
    </services>
</container>
