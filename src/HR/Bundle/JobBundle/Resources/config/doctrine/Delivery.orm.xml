<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="HR\Bundle\JobBundle\Entity\Delivery" table="delivery">
        <indexes>
            <index columns="created_at" />
        </indexes>

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>

        <field name="title" type="string" column="title" length="200" />
        <field name="body" type="text" column="body" />
        <field name="createdAt" type="datetime" column="created_at" />

        <many-to-one field="receiver" target-entity="HR\Bundle\UserBundle\Entity\User" />
        <many-to-one field="sender" target-entity="HR\Bundle\UserBundle\Entity\User" />
        <many-to-one field="job" target-entity="Job" />
    </entity>
</doctrine-mapping>
