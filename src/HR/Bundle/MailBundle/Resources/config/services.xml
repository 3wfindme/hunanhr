<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="user.resetting.email.template">HRMailBundle:Mailer:resetting.txt.twig</parameter>
        <parameter key="user.registration.confirmation.template">HRMailBundle:Mailer:registration.txt.twig</parameter>
    </parameters>

    <services>
        <service id="hr.mailer" class="HR\Bundle\MailBundle\Mailer\Mailer">
            <argument type="service" id="mailer" />
            <argument type="service" id="router" />
            <argument type="service" id="twig" />
            <argument type="collection">
                <argument key="template" type="collection">
                    <argument key="confirmation">%user.registration.confirmation.template%</argument>
                    <argument key="resetting">%user.resetting.email.template%</argument>
                </argument>
                <argument key="from_email" type="collection">
                    <argument key="confirmation">no-reply@hunanhr.com</argument>
                    <argument key="resetting">no-reply@hunanhr.com</argument>
                </argument>
            </argument>
        </service>
    </services>
</container>
